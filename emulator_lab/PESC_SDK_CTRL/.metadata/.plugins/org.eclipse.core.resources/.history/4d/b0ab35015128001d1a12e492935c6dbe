#include <GPIO.hpp>



GPIO::GPIO(){

	XGpio_Initialize(&XGPIO_Data, XPAR_AXI_GPIO_1_DEVICE_ID );
	XGPIO_Config = *XGpio_LookupConfig( XPAR_AXI_GPIO_1_DEVICE_ID );


}


void GPIO::writePin(const unsigned pin_number, const bool state){

	XGpio_SetDataDirection(&XGPIO_Data, hmi.gpio_0.channel, hmi.gpio_0.direction_mask);
	XGpio_DiscreteWrite(&XGPIO_Data, hmi.gpio_0.channel, output_data);
		input_data = XGpio_DiscreteRead(&XGPIO_Data, hmi.gpio_0.channel);
}
